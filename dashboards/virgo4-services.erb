<% content_for :title do %><%= "Search Services (#{ENV[ 'ENVIRONMENT' ]})" %><% end %>
<div class="gridster">
   <center><div style="font-size: 22px"><a href="/virgo4-ingest-pipeline-hour" class="pull-left">&nbsp;previous</a><%= "Search Services (#{ENV[ 'ENVIRONMENT' ]})" %><a href="/virgo4-solr-pools" class="pull-right">next&nbsp;</a></div></center>

  <ul>

     <% services = [ 'CLIENT_LANDING' ] %>
     <% services.each do |key| %>

        <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
           <div data-id="<%= "#{CONFIG[key]['id']}" %>" data-view="Meter" data-title="<%= "#{CONFIG[key]['title']}" %>" data-min="0" data-max="1000" data-moreinfo="Response time in mS"></div>
        </li>

     <% end %>

     <% services = [ 'CLIENT_SERVICE',
                     'SEARCH_SERVICE',
                     'AVAILABILITY_SERVICE',
                     'CITATIONS_SERVICE',
                     'COLLECTIONS_SERVICE',
                     'ILS_SERVICE',
                     'PDA_SERVICE',
                     'SHELF_BROWSE_SERVICE',
                     'SUGGESTER_SERVICE'] %>
     <% services.each do |key| %>

        <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
           <div data-id="<%= "#{CONFIG[key]['id']}" %>" data-view="Statusbox" data-title="<%= "#{CONFIG[key]['title']}" %>" data-text="Down"></div>
        </li>

     <% end %>

    <% 2.times do || %>
      <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="blank" data-view="Comments" data-title="Blank" data-text=""></div>
      </li>
    <% end %>

  </ul>
</div>
